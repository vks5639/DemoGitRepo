pipeline {
    agent any

    tools {
        maven 'Maven 3.9.8' // Use the name provided in the Maven configuration
    }

    stages {
        stage('Build') {
            steps {
                echo "Building the Code..."
                bat 'mvn clean'
            }
        }

        stage('Test') {
            steps {
                echo "Testing the Code..."
                bat 'mvn test'
            }
        }

        stage('Compile') {
            steps {
                echo "Compiling the Project..."
                bat 'mvn compile'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying the Project..."
            }
        }
    }
}
